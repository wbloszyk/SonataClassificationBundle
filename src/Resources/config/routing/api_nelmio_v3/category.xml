<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="get_categories" path="/categories.{_format}" methods="GET" controller="Sonata\ClassificationBundle\Controller\Api\CategoryController::getCategoriesAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="get_category" path="/categories/{id}.{_format}" methods="GET" controller="Sonata\ClassificationBundle\Controller\Api\CategoryController::getCategoryAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="post_category" path="/categories.{_format}" methods="POST" controller="Sonata\ClassificationBundle\Controller\Api\CategoryController::postCategoryAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="put_category" path="/categories/{id}.{_format}" methods="PUT" controller="Sonata\ClassificationBundle\Controller\Api\CategoryController::putCategoryAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="delete_category" path="/categories/{id}.{_format}" methods="DELETE" controller="Sonata\ClassificationBundle\Controller\Api\CategoryController::deleteCategoryAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
</routes>
