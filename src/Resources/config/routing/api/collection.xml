<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="get_collections" path="/collections.{_format}" methods="GET" controller="Sonata\ClassificationBundle\Controller\Api\Legacy\CollectionController::getCollectionsAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="get_collection" path="/collections/{id}.{_format}" methods="GET" controller="Sonata\ClassificationBundle\Controller\Api\Legacy\CollectionController::getCollectionAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="post_collection" path="/collections.{_format}" methods="POST" controller="Sonata\ClassificationBundle\Controller\Api\Legacy\CollectionController::postCollectionAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="put_collection" path="/collections/{id}.{_format}" methods="PUT" controller="Sonata\ClassificationBundle\Controller\Api\Legacy\CollectionController::putCollectionAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="delete_collection" path="/collections/{id}.{_format}" methods="DELETE" controller="Sonata\ClassificationBundle\Controller\Api\Legacy\CollectionController::deleteCollectionAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
</routes>
